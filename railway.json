{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "watchPatterns": [
      "edge/**",
      "alpaca/**",
      "requirements.txt",
      "Procfile",
      "Dockerfile",
      ".well-known/openapi.json",
      "railway.json"
    ]
  },
  "deploy": {
    "startCommand": "/bin/sh -c \"exec uvicorn app:app --host 0.0.0.0 --port $PORT\"",
    "healthcheckPath": "/healthz",
    "multiRegionConfig": {
      "us-east4-eqdc4a": {
        "numReplicas": 2
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
